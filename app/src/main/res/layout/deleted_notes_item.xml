<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/deleted_note_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/deleted_note_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="8dp"
                    android:textColor="#ff000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="这里是title"/>
                <TextView
                    android:id="@+id/deleted_note_remaintime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#ff000000"
                    android:textStyle="bold"
                    android:text="这里是剩余时间"
                    android:visibility="gone"/>
            </LinearLayout>


            <TextView
                android:id="@+id/deleted_note_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deleted_note_linear"
                android:layout_marginBottom="8dp"
                android:textColor="#ff000000"
                android:maxLines="5"
                android:text="这里是content"/>

            <TextView
                android:id="@+id/deleted_note_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/deleted_note_content"
                android:textColor="#ff2a0f5c"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="这里是时间"/>

            <TextView
                android:id="@+id/deleted_note_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/deleted_note_content"
                android:textColor="#ff2a0f5c"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="这里是优先级"/>

            <TextView
                android:id="@+id/deleted_note_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>