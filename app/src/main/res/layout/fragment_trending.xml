<?xml version="1.0" encoding="utf-8"?>
<!-- ECharts图表的实现 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_bar_chart"
            style="@style/Button.Primary.wrap"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="@dimen/text_size_10"
            android:layout_weight="1"
            android:text="日记统计:天气" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_line_chart"
            style="@style/Button.Primary.wrap"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_10"
            android:text="日记统计:暂无" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_pie_chart"
            style="@style/Button.Primary.wrap"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_10"
            android:text="日记统计:心情" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>